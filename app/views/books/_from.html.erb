<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> on saving book:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title %>
  </div>
  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, book.statuses.keys %>
  </div>
    <div class="field">
    <%= form.label :lend_date %>
    <%= form.date_field :lend_date, id: :book_lend_date %>
  </div>
    <div class="field">
    <%= form.label :return_date %>
    <%= form.date_field :return_date, id: :book_return_date %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>