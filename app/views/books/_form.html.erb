<%= form_with(model: @book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> on saving book:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Book.statuses.keys, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :lend_date %>
    <%= form.date_field :lend_date, id: :book_lend_date, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :return_date %>
    <%= form.date_field :return_date, id: :book_return_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>